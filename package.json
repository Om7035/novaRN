{
  "name": "novarn",
  "version": "1.0.1",
  "main": "expo-router/entry",
  "description": "A production-ready React Native boilerplate that just works. Built with Expo Router, TypeScript, and offline-first architecture.",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "test": "jest",
    "verify-deps": "node ./scripts/verify-dependencies.js",
    "deploy": "node ./scripts/deploy.js",
    "test-cli": "cd cli && node index.js test-app --verbose",
    "postinstall": "node ./scripts/post-install.js",
    "setup": "npm install && npm run postinstall"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "axios": "^1.12.2",
    "expo": "~54.0.13",
    "expo-constants": "~18.0.9",
    "expo-font": "~14.0.9",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.11",
    "expo-secure-store": "^15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.7",
    "nativewind": "^4.2.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0",
    "tailwindcss": "^3.4.14",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "typescript": "~5.9.2"
  },
  "optionalDependencies": {
    "@tanstack/query-sync-storage-persister": "^5.90.7",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-persist-client": "^5.90.7",
    "react-native-mmkv": "^3.3.3",
    "react-native-netinfo": "^1.1.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "jest": "^30.2.0"
  },
  "keywords": [
    "expo",
    "react-native",
    "boilerplate",
    "typescript",
    "template"
  ],
